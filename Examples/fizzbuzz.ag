//Import required libraries.
import "core";
import "io";

//Get the limit to print to.
print "Enter what value you wish to print up to.";
let limit = null;
while (true) 
{
    limit = input.get();
    if (!string.isInteger(limit)) 
    {
        print "Invalid limit, please enter again.";
    }
    else 
    {
        break;
    }
}

//Got the limit.
limit = int(limit);

//Now, FizzBuzz.
print "\nPrinting...\n---";
for (i up to limit) 
{
    //Make sure it's 1 and up, not 0 and up.
    if (i < 1) { continue; }

    let out = "";
    if (i % 3 == 0) {
        out += "Fizz";
    }
    if (i % 5 == 0) {
        out += "Buzz";
    }
    
    if (out == "") { out = i; }
    print out;
}
