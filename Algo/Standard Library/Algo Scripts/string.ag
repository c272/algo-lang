library string 
{

	//Return a character array of the string.
	external toChars <- std_string.toCharArray;
    
    //Return whether a string contains a substring.
    external contains <- std_string.contains;

	//Split a string into an array by a separator.
	external split <- std_string.split;

	//Replace all instances of a substring with another substring.
	external replace <- std_string.replace;
    
    //Reverse a string.
    external reverse <- std_string.reverse;
	
	//Get a substring of a string.
	external substring <- std_string.substring;

	//Returns a boolean of whether a string ends with a substring.
	external endsWith <- std_string.endsWith;

	//Returns a boolean of whether a string starts with a substring.
	external startsWith <- std_string.startsWith;

	//Returns a boolean of whether a string represents an integer.
	external isInteger <- std_string.isInteger;

	//Returns a boolean of whether a string represents a float.
	external isFloat <- std_string.isFloat;
    
    //Returns a string, converted to allcaps.
    external toUpper <- std_string.toUpper;
    
    //Returns a string, converted to nocaps.
    external toLower <- std_string.toLower;

}

library regex
{
    external match <- std_string.regex_match;
}
